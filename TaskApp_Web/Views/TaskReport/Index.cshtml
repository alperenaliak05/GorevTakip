@model IEnumerable<TaskApp_Web.Models.DTO.TaskReportDTO>

<h2>Görev Raporları</h2>

<table class="table">
    <thead>
        <tr>
            <th>Görev Başlığı</th>
            <th>Açıklama</th>
            <th>Görevi Atayan Kişi</th>
            <th>Bitiş Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.TaskTitle</td>
                <td>@report.TaskDescription</td>
                <td>@report.AssignedByUserFirstName @report.AssignedByUserLastName</td>
                <td>@report.DueDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@report.TaskId" class="btn btn-info">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
