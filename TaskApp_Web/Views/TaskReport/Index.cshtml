@model IEnumerable<TaskApp_Web.Models.TaskReport>

<h2>Görev Raporları</h2>

<table class="table">
    <thead>
        <tr>
            <th>Görev</th>
            <th>Rapor</th>
            <th>Oluşturan</th>
            <th>Oluşturulma Tarihi</th>
            <th>Güncellenme Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.Task.Title</td>
                <td>@report.Report</td>
                <td>@report.CreatedByUser.FirstName @report.CreatedByUser.LastName</td>
                <td>@report.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@report.UpdatedAt?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@report.Id" class="btn btn-primary">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@report.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
