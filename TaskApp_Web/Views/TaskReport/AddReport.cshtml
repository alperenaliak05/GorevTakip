@model TaskApp_Web.Models.TaskReport

<h2>Yeni Görev Raporu Ekle</h2>

<form asp-action="AddReport" method="post">
    <div class="form-group">
        <label for="TaskId">Görev</label>
        <select asp-for="TaskId" class="form-control" asp-items="ViewBag.Tasks">
            <option value="">Bir Görev Seçin</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Report">Rapor</label>
        <textarea asp-for="Report" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
