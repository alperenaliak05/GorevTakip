@model IEnumerable<DTOs.TaskApp_WebDTO.TaskReportDTO>

<h2>Raporlarım</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Görev Başlığı</th>
                <th>Açıklama</th>
                <th>Bitiş Tarihi</th>
                <th>Rapor</th>
                <th>Oluşturulma Tarihi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.TaskTitle</td>
                    <td>@report.TaskDescription</td>
                    <td>@report.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>@report.ReportContent</td>
                    <td>@report.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
