@model Models.UserProfileViewModel

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-picture" style="background-image: url('@Model.ProfilePicture');"></div>
        <div class="profile-details">
            <h2>@Model.FirstName @Model.LastName</h2>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Departman:</strong> @Model.DepartmentName</p>
            <p><strong>Telefon:</strong> @Model.PhoneNumber</p>
            <p><strong>Durum:</strong> <span id="user-status">@Model.Status</span></p>
            <p><strong>Çalışma Saatleri:</strong> @Model.WorkingHours</p>
        </div>
    </div>

    <!-- Kullanıcı durumunu seçmesi için form -->
    <form asp-action="UpdateStatus" method="post" class="status-form">
        <div class="status-select-container">
            <select asp-for="Status" class="form-control">
                <option value="Mesgul">Meşgul</option>
                <option value="Musait">Müsait</option>
                <option value="Izinli">İzinli</option>
                <option value="Toplantıda">Toplantıda</option>
            </select>
            <button type="submit" class="btn btn-primary">Durumu Güncelle</button>
        </div>
    </form>

    <div class="user-badges">
        <h2>Rozetlerim</h2>
        @if (Model.UserBadges != null && Model.UserBadges.Any())
        {
            <div class="badges-grid">
                @foreach (var badge in Model.UserBadges)
                {
                    <div class="badge-item">
                        <img src="@badge.ImageUrl" alt="@badge.Name" class="badge-image" />
                        <div class="badge-info">
                            <span class="badge-name">@badge.Name</span>
                            <p class="badge-description">@badge.Description</p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Henüz rozet kazanmadınız.</p>
        }
    </div>
</div>

<style>
    body {
        font-family: 'Lato', Arial, sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        color: #333;
        padding: 40px;
        margin: 0;
    }

    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 40px;
        transition: all 0.3s ease;
    }

    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
    }

    .profile-picture {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        background-size: cover;
        background-position: center;
        margin-right: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .profile-details {
        flex-grow: 1;
    }

        .profile-details h2 {
            font-size: 32px;
            margin-bottom: 10px;
            color: #007bff;
        }

        .profile-details p {
            font-size: 18px;
            margin: 5px 0;
        }

    .status-form {
        text-align: center;
        margin-top: 20px;
    }

    .status-select-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-control {
        width: 60%;
        padding: 10px;
        margin-right: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
        }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .user-badges {
        margin-top: 40px;
    }

        .user-badges h2 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #333;
        }

    .badges-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
    }

    .badge-item {
        text-align: center;
        background: #f7f7f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .badge-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

    .badge-image {
        width: 80px;
        height: 80px;
        margin-bottom: 15px;
        border-radius: 50%;
        transition: transform 0.3s ease;
    }

    .badge-item:hover .badge-image {
        transform: rotate(360deg);
    }

    .badge-name {
        display: block;
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 10px;
    }

    .badge-description {
        font-size: 14px;
        color: #666;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const profilePicture = document.querySelector('.profile-picture');
        profilePicture.addEventListener('mouseover', function () {
            this.style.transform = 'scale(1.15)';
            this.style.boxShadow = '0 8px 16px rgba(0, 0, 0, 0.3)';
        });
        profilePicture.addEventListener('mouseout', function () {
            this.style.transform = 'scale(1)';
            this.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.2)';
        });
    });
</script>
