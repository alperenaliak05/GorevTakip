@model TaskApp_Web.Models.UserProfileViewModel

<div class="profile-container">
    <!-- Profil Resmi -->
    <div class="profile-picture" style="background-image: url('@Model.ProfilePictureUrl');">
        <!-- Eğer profil resmi yoksa default bir resim gösterebiliriz -->
    </div>

    <!-- Profil Detayları -->
    <div class="profile-details">
        <h2>Profil Bilgileri</h2>
        <p><strong>Ad:</strong> @Model.FirstName</p>
        <p><strong>Soyad:</strong> @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Departman:</strong> @Model.DepartmentName</p>
    </div>
</div>
