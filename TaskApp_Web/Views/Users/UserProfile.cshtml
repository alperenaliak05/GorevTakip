@model Models.UserProfileViewModel

<div class="profile-container">
    <div class="profile-picture" style="background-image: url('@Model.ProfilePicture');"></div>

    <div class="profile-details">
        <h2>Profil Bilgileri</h2>
        <p><strong>Ad:</strong> @Model.FirstName</p>
        <p><strong>Soyad:</strong> @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Departman:</strong> @Model.DepartmentName</p>
        <p><strong>Telefon:</strong> @Model.PhoneNumber</p>
        <p><strong>Çalışma Saatleri:</strong> @Model.WorkingHours</p>
    </div>

    <div class="user-badges">
        <h2>Rozetlerim</h2>
        @if (Model.UserBadges != null && Model.UserBadges.Any())
        {
            <ul class="badges-list">
                @foreach (var badge in Model.UserBadges)
                {
                    <li class="badge-item">
                        <img src="@badge.ImageUrl" alt="@badge.Name" class="badge-image" />
                        <span class="badge-name">@badge.Name</span>
                        <p class="badge-description">@badge.Description</p>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>Henüz rozet kazanmadınız.</p>
        }
    </div>
</div>

<style>
    body {
        font-family: 'Lato', Arial, sans-serif;
        background-color: #f7f7f9;
        color: #333;
        padding: 40px;
        margin: 0;
    }

    .profile-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .profile-picture {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        background-size: cover;
        background-position: center;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .profile-details {
        text-align: center;
    }

        .profile-details h2 {
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
            transition: color 0.3s ease;
        }

        .profile-details p {
            font-size: 18px;
            margin: 10px 0;
            transition: color 0.3s ease;
        }

            .profile-details p:hover {
                color: #007bff;
            }

    .badges-list {
        list-style-type: none;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 0;
    }

    .badge-item {
        margin: 10px;
        text-align: center;
    }

    .badge-image {
        width: 50px;
        height: 50px;
        border-radius: 25px;
    }

    .badge-name {
        display: block;
        font-weight: bold;
    }

    .badge-description {
        font-size: 14px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Profil fotoğrafı üzerine gelindiğinde büyüme efekti
        const profilePicture = document.querySelector('.profile-picture');
        profilePicture.addEventListener('mouseover', function () {
            this.style.transform = 'scale(1.1)';
            this.style.boxShadow = '0 8px 16px rgba(0, 0, 0, 0.2)';
        });
        profilePicture.addEventListener('mouseout', function () {
            this.style.transform = 'scale(1)';
            this.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
        });
    });
</script>
