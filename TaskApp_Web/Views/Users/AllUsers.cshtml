@{
    ViewData["Title"] = "Tüm Kullanıcılar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userDepartment = ViewBag.UserDepartment as string;
    var isHR = userDepartment == "İnsan Kaynakları Uzmanı";
}

<h1>Tüm Kullanıcılar</h1>

@if (isHR)
{
    <a asp-action="CreateUser" class="btn btn-primary mb-3">Yeni Kullanıcı Ekle</a>
}



<p>Kullanıcı departmanı: @userDepartment</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th><input type="text" id="searchName" placeholder="Kişi Ara" class="form-control search-input"></th>
                <th><input type="text" id="searchSurname" placeholder="Soyad Ara" class="form-control search-input"></th>
                <th><input type="text" id="searchEmail" placeholder="Mail Adresi Ara" class="form-control search-input"></th>
                <th><input type="text" id="searchDepartment" placeholder="Departman Ara" class="form-control search-input"></th>
                <th>     </th>
            </tr>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Email</th>
                <th>Departman</th>
                <th>Profil</th>
            </tr>
        </thead>
        <tbody id="userTable">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Department.Name</td>
                    <td><a asp-action="UserProfile" asp-route-id="@user.Id" class="btn btn-secondary profile-btn">Profil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var searchInputs = document.querySelectorAll('input[id^="search"]');

        searchInputs.forEach(function (input) {
            input.addEventListener("input", function () {
                filterTable();
            });
        });

        function filterTable() {
            var table, rows, i, j, cell, shouldShow;
            table = document.getElementById("userTable");
            rows = table.getElementsByTagName("tr");

            for (i = 0; i < rows.length; i++) {
                shouldShow = true;
                for (j = 0; j < searchInputs.length; j++) {
                    cell = rows[i].getElementsByTagName("td")[j];
                    if (cell) {
                        var searchText = searchInputs[j].value.toLowerCase();
                        var cellText = cell.textContent.toLowerCase();
                        if (cellText.indexOf(searchText) === -1) {
                            shouldShow = false;
                            break;
                        }
                    }
                }
                rows[i].style.display = shouldShow ? "" : "none";
            }
        }

        // Arama giriş alanlarına animasyon ekleyin
        document.querySelectorAll('.search-input').forEach(input => {
            input.addEventListener('focus', function () {
                this.parentNode.classList.add('focused');
            });
            input.addEventListener('blur', function () {
                if (!this.value) {
                    this.parentNode.classList.remove('focused');
                }
            });
        });

        // Profil butonlarına hover animasyonu ekle
        document.querySelectorAll('.profile-btn').forEach(button => {
            button.addEventListener('mouseover', function () {
                this.classList.add('btn-animate');
            });
            button.addEventListener('mouseout', function () {
                this.classList.remove('btn-animate');
            });
        });
    });
</script>

<style>
    body {
        font-family: 'Lato', Arial, sans-serif;
        background-color: #f7f7f9;
        color: #333;
        padding: 40px;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 36px;
        color: #343a40;
    }

    .table-responsive {
        max-width: 100%;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .table-responsive:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
            padding: 15px;
        }

        .table thead {
            background-color: #343a40;
            color: white;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 16px;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .profile-btn {
        transition: all 0.3s ease;
    }

    .btn-animate {
        transform: scale(1.05);
        transition: transform 0.2s;
    }

    .search-input {
        border: 2px solid #ddd;
        transition: border-color 0.3s ease;
    }

        .search-input:focus {
            border-color: #007bff;
        }

    .focused .form-control {
        border-color: #007bff;
    }

    .text-warning {
        color: #856404;
        background-color: #fff3cd;
        border-color: #ffeeba;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        text-align: center;
    }
</style>
