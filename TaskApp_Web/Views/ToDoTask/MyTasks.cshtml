@model IEnumerable<TaskApp_Web.Models.DTO.TaskDTO>

<h2>Görevlerim</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Atanan Kişi ID</th>
            <th>Görevi Atayan Kişi ID</th>
            <th>Bitiş Tarihi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.AssignedToUserId</td>
                <td>@task.AssignedByUserId</td>
                <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@task.Status.ToString()</td> <!-- Enum değeri string'e çevriliyor ve gösteriliyor -->
                <td>
                    <a href="/Tasks/CompleteTask/@task.Id" class="btn btn-success">Tamamla</a>
                    <a href="/Tasks/IncompleteTask/@task.Id" class="btn btn-warning">Tamamlanmadı</a>
                    <a href="/Tasks/SetTaskInProgress/@task.Id" class="btn btn-info">İlerliyor</a>
                </td>
            </tr>
        }
    </tbody>
</table>
