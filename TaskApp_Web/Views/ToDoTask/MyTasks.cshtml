@model IEnumerable<TaskApp_Web.Models.DTO.TaskDTO>

<h2>Görevlerim</h2>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Görevi Atayan Kişi</th>
            <th>Bitiş Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.AssignedByUserFirstName @task.AssignedByUserLastName</td>
                <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="/Tasks/IncompleteTask/@task.Id" class="btn btn-warning">Tamamlandı</a>
                    <a href="/Tasks/SetTaskInProgress/@task.Id" class="btn btn-red">Reddedildi</a>
                </td>
            </tr>
        }
    </tbody>
</table>
