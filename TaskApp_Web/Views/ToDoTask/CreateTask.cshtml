@model List<TaskApp_Web.Models.DTO.TaskDTO>

@{
    ViewBag.Title = "Görev Oluştur";
}

<h2>Görev Oluştur</h2>

<form asp-action="CreateTask" method="post">
    <div class="form-group">
        <label for="Title">Başlık</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>
    <div class="form-group">
        <label for="Description">Açıklama</label>
        <textarea class="form-control" id="Description" name="Description" required></textarea>
    </div>
    <div class="form-group">
        <label for="AssignedToUserId">Kullanıcı Seç</label>
        <select class="form-control" id="AssignedToUserId" name="AssignedToUserId">
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="DueDate">Bitiş Tarihi</label>
        <input type="date" class="form-control" id="DueDate" name="DueDate" required />
    </div>
    <button type="submit" class="btn btn-primary">Görev Oluştur</button>
</form>
