@model IEnumerable<TaskApp_Web.Models.DTO.TaskTrackingDTO>

<h2>Görev Takibi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Atanan Kişi</th>
            <th>Bitiş Tarihi</th>
            <th>Durum</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.AssignedToUserName</td>
                <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@task.Status.ToString()</td>
                <td>
                    <a asp-action="EditTask" asp-route-id="@task.TaskId" class="btn btn-warning">Düzenle</a>
                </td>
                <td>
                    <form asp-action="DeleteTask" asp-route-id="@task.TaskId" method="post" onsubmit="return confirm('Bu görevi silmek istediğinize emin misiniz?');">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
