@model IEnumerable<TaskApp_Web.Models.TaskProgressViewModel>

<h2>Görev İlerleme</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>İsim Soyisim</th>
                <th>Departman</th>
                <th>Tamamlanan Görev Sayısı</th>
                <th>Reddedilen Görev Sayısı</th>
                <th>Bekleyen Görev Sayısı</th>
                <th>Toplam Görev Sayısı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var totalTasks = item.CompletedTasks + item.RejectedTasks + item.PendingTasks;
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Department</td>
                    <td>@item.CompletedTasks</td>
                    <td>@item.RejectedTasks</td>
                    <td>@item.PendingTasks</td>
                    <td>@totalTasks</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />

@{
    // En çok görev tamamlayan kullanıcıyı bul
    var topUser = Model.OrderByDescending(u => u.CompletedTasks).FirstOrDefault();
}

@if (topUser != null)
{
    <h4>En çok görev tamamlayan kullanıcı ayın çalışanı seçilecektir.</h4>
    <p><strong>Ayın Çalışanı Adayı:</strong> @topUser.FullName (@topUser.Department) - Tamamlanan Görev Sayısı: @topUser.CompletedTasks</p>
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        font-size: 28px;
    }

    .table {
        width: 80%;
        margin: 0 auto;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
            padding: 15px;
        }

        .table thead {
            background-color: #343a40;
            color: white; /* Başlık yazı rengini beyaz yap */
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    hr {
        margin-top: 40px;
        border: 0;
        height: 1px;
        background: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
    }

    h4 {
        text-align: center;
        font-size: 20px;
        margin-top: 20px;
    }

    p {
        text-align: center;
        font-size: 18px;
    }
</style>
