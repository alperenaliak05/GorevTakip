@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Görev Yönetim Sistemi </h2>
<div class="login-box">
    <h2>Giriş Yap</h2>
    <form asp-action="Login" method="post">
        <div class="user-box">
            <input type="email" id="email" name="email" required="">
            <label>E-posta</label>
        </div>
        <button id="btn-login" type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>
</div>
