@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TKGörevYönetim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Lato', Arial, sans-serif;
            background: #f7f7f9;
            margin: 0;
            padding: 0;
        }

        .navbar {
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            z-index: 1000;
            background: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand img {
            height: 60px;
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.15); /* Logo büyütme efekti */
            }

        .login-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            width: 90%;
            max-width: 400px;
            opacity: 0;
            transition: opacity 0.5s ease-out; /* Opacity geçişi */
        }

            .login-container.show {
                opacity: 1; /* Sayfa yüklenince görünür olma */
            }

            .login-container img {
                max-width: 100%;
                height: auto;
                margin-bottom: 1rem;
            }

            .login-container h2 {
                margin-bottom: 1rem;
                font-size: 2rem;
                color: #333;
            }

            .login-container .form-group {
                position: relative;
                margin-bottom: 1.5rem;
            }

                .login-container .form-group input {
                    border-radius: 5px;
                    border: 1px solid #ccc;
                    box-shadow: none;
                    padding: 15px;
                    transition: border-color 0.3s, box-shadow 0.3s;
                    font-size: 16px;
                    width: 100%;
                }

                    .login-container .form-group input:focus {
                        border-color: #007bff;
                        box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
                    }

            .login-container .btn-primary {
                border-radius: 20px;
                padding: 10px 20px;
                font-size: 18px;
                font-weight: bold;
                background-color: #007bff;
                border: none;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                transition: background-color 0.3s, box-shadow 0.3s;
                width: 100%;
            }

                .login-container .btn-primary:hover {
                    background-color: #0056b3;
                    box-shadow: 0 4px 8px rgba(0, 123, 255, 0.5);
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/uploads/Dark Blue Modern Professional Technology Company Logo (1).png" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="login-container" id="loginContainer">
        <img src="~/uploads/Dark Blue Modern Professional Technology Company Logo (1).png" alt="Logo" />
        <h2>Giriş Yap</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <input type="email" id="email" name="email" class="form-control" placeholder="E-posta" required />
            </div>
            <button id="btn-login" type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sayfa yüklenince login kutusunu gösterme
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("loginContainer").classList.add("show");
        });
    </script>
</body>
</html>
