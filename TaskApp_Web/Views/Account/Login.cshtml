@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="main-title" class="text-center" style="margin-bottom: 5px; opacity: 0; transform: translateY(-50px); transition: all 1s ease;">Görev Yönetim Sistemi</h2>

<div class="d-flex justify-content-center align-items-center" style="height: 70vh;">
    <div class="login-box p-5" style="border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.2); width: 400px; opacity: 0; transform: translateY(-100px); transition: all 1.5s ease;">
        <div class="text-center mb-4">
            <h2 class="d-inline-block align-middle">Giriş Yap</h2>
        </div>
        <form asp-action="Login" method="post">
            <div class="user-box mb-4">
                <label for="email">E-posta</label>
                <input type="email" id="email" name="email" class="form-control" required="" style="transition: all 0.3s ease;">
            </div>
            <div class="text-center">
                <button id="btn-login" type="submit" class="btn btn-primary" style="transition: background-color 0.3s ease, transform 0.3s ease;">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        font-family: 'Lato', Arial, sans-serif;
        background: linear-gradient(135deg, #f7f7f9 0%, #e2e2e2 100%);
        transition: background 2s ease-in-out;
        overflow: hidden; /* Sayfa yüklenirken fazla kayma olmasın diye */
    }

    #main-title {
        animation: fadeInDown 1s ease-in-out forwards;
    }

    .login-box {
        animation: bounceInUp 1.5s ease-in-out forwards;
        background: rgba(255, 255, 255, 0.8); /* Hafif saydam arka plan */
        backdrop-filter: blur(10px); /* Arka plan bulanıklaştırma efekti */
        transition: background 0.5s ease;
    }

    .login-box:hover {
        background: rgba(255, 255, 255, 1); /* Hover'da tam opaklık */
    }

    .btn-primary {
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 18px;
        font-weight: bold;
        transition: all 0.3s ease;
        background-image: linear-gradient(to right, #007bff, #0056b3);
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-primary:hover {
        background-image: linear-gradient(to right, #0056b3, #007bff);
        transform: scale(1.1);
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
    }

    .user-box input {
        font-size: 16px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: box-shadow 0.3s ease, border-color 0.3s ease;
    }

    .user-box input:focus {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        border-color: #007bff;
        transform: scale(1.02); /* Odaklanıldığında hafif büyüme efekti */
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounceInUp {
        0% {
            opacity: 0;
            transform: translateY(100px);
        }
        60% {
            opacity: 1;
            transform: translateY(-20px);
        }
        80% {
            transform: translateY(10px);
        }
        100% {
            transform: translateY(0);
        }
    }

    /* Ekstra animasyonlar ve efektler */
    .login-box h2 {
        animation: pulse 2s infinite;
    }

    .user-box label {
        position: absolute;
        top: 0;
        left: 10px;
        font-size: 14px;
        color: #aaa;
        pointer-events: none;
        transition: all 0.3s ease;
        transform-origin: left;
    }

    .user-box input:focus + label, .user-box input:not(:placeholder-shown) + label {
        top: -20px;
        left: 0;
        color: #007bff;
        font-size: 12px;
        transform: scale(0.9);
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
        }
        50% {
            transform: scale(1.1);
            text-shadow: 0 0 15px rgba(255, 255, 255, 1);
        }
        100% {
            transform: scale(1);
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
        }
    }

    /* Dalga animasyonu için */
    .wave {
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 200%;
        height: 200px;
        background: #007bff;
        opacity: 0.6;
        transform: translateX(-50%) translateY(100%);
        border-radius: 100%;
        animation: waveAnimation 4s infinite ease-in-out;
    }

    @@keyframes waveAnimation {
        0%, 100% {
            transform: translateX(-50%) translateY(100%);
        }
        50% {
            transform: translateX(-50%) translateY(0);
        }
    }
</style>

<div class="wave"></div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const loginBox = document.querySelector('.login-box');
        const btnLogin = document.getElementById('btn-login');
        const mainTitle = document.getElementById('main-title');
        const emailInput = document.getElementById('email');

        // Sayfa yüklendiğinde başlık ve login kutucuğu animasyonu
        setTimeout(() => {
            mainTitle.style.opacity = 1;
            mainTitle.style.transform = 'translateY(0)';
        }, 200);

        setTimeout(() => {
            loginBox.style.opacity = 1;
            loginBox.style.transform = 'translateY(0)';
        }, 400);

        // Buton üzerine gelindiğinde animasyon
        btnLogin.addEventListener('mouseenter', function () {
            btnLogin.style.transform = 'scale(1.1)';
            btnLogin.style.backgroundColor = '#0069d9';
        });

        btnLogin.addEventListener('mouseleave', function () {
            btnLogin.style.transform = 'scale(1)';
            btnLogin.style.backgroundColor = '';
        });

        // E-posta alanına odaklanıldığında animasyon
        emailInput.addEventListener('focus', function () {
            emailInput.style.boxShadow = '0 0 5px rgba(0, 123, 255, 0.8)';
            emailInput.style.transform = 'scale(1.05)';
        });

        emailInput.addEventListener('blur', function () {
            emailInput.style.boxShadow = 'none';
            emailInput.style.transform = 'scale(1)';
        });

        // Body arka planı yavaşça değiştir
        document.body.style.background = "linear-gradient(135deg, #e2e2e2 0%, #f7f7f9 100%)";
    });
</script>
